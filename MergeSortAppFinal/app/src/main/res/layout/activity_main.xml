<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@android:color/background_dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Inicio"
        android:id="@+id/msg1"
        android:textColor="#ffffffff"
        android:layout_marginTop="64dp"
        android:width="1000dp"
        android:textIsSelectable="false"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Final"
        android:id="@+id/msg2"
        android:textColor="#ffffffff"
        android:width="1000dp"
        android:textSize="40dp"
        android:layout_below="@+id/msg1"
        android:layout_alignLeft="@+id/msg1"
        android:layout_alignStart="@+id/msg1"
        android:layout_marginTop="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/bateria"
        android:id="@+id/batteryTxt"
        android:textColor="#ffffffff"
        android:width="1000dp"
        android:textSize="40dp"
        android:layout_above="@+id/sort"
        android:layout_alignLeft="@+id/msg2"
        android:layout_alignStart="@+id/msg2"
        android:layout_marginBottom="64dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnEjecutar"
        android:id="@+id/sort"
        android:onClick="onClick"
        android:width="180dp"
        android:height="100dp"
        android:textColor="#ffffffff"
        android:background="#ffff2100"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="94dp" />
</RelativeLayout>
