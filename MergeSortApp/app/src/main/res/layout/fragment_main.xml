<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:background="@mipmap/bg">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generar"
        android:id="@+id/btnGenerar"
        android:layout_marginLeft="238dp"
        android:layout_marginStart="238dp"
        android:layout_marginBottom="104dp"
        android:width="200dp"
        android:height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ordenar"
        android:id="@+id/btnOrdenar"
        android:width="200dp"
        android:layout_marginRight="222dp"
        android:layout_marginEnd="222dp"
        android:layout_alignTop="@+id/btnGenerar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/btnGenerar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputText"
        android:width="1000dp"
        android:height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="142dp"
        android:text="@string/nombre"
        android:textColor="#ffffffff"
        android:textAlignment="center"
        android:textSize="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ordenar"
        android:id="@+id/textView"
        android:width="1000dp"
        android:height="100dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/inputText"
        android:layout_alignStart="@+id/inputText" />

</RelativeLayout>
